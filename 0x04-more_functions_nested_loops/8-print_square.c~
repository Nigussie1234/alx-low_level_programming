#include "holberton.h"
/**
 *print_square - print a square followed by a new line
 *@size: the size of a square
 *
 *Return: void
 */
void print_diagonal(int n)
{
int l = 0;
int m;
if (n > 0)
{
while (l < n)
{
for (m = 0; m < l; m++)
{
_putchar (' ');
}
_putchar ('\\');
_putchar ('\n');
l++;
}
}
else
{
_putchar ('\n');
}
}
